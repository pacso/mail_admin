!!!
%html
  %head
    %title Mail Admin
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    / NAVIGATION
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          = content_tag "a", :class => "btn btn-navbar", :data => { :toggle => "collapse", :target => ".nav-collapse" } do
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Mail Admin", "#", :class => 'brand'
          - if current_mailbox
            .nav-collapse.collapse.in
              %ul.nav.pull-right
                %li.dropdown
                  = link_to "#", :class => 'dropdown-toggle', :data => { :toggle => 'dropdown' } do
                    Logged in as
                    = current_mailbox.email_address
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to "Change Password", change_password_path
                    %li= link_to "Sign Out", sign_out_path, method: :delete

    .container-fluid
      - flash.each do |type, msg|
        = content_tag "div", class: "alert alert-#{ class_for_alert_type(type) }" do
          = content_tag "a", class: "close", data: { dismiss: "alert" } do
            x
          = msg
      = yield
    